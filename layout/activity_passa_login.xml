<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassaLogin"
    android:background="@drawable/novo4_fundo">


    <Button
    android:id="@+id/utilizadores_button"
    android:layout_width="289dp"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="204dp"
    android:background="@drawable/button_login_style"
        android:onClick="onClickUtilizadores"
    android:text="Utilizadores" />

    <Button
        android:id="@+id/personal_trainer_button"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="287dp"
        android:background="@drawable/button_login_style"
        android:onClick="onClickPersonalTrainers"
        android:text="Personal Trainers" />
</RelativeLayout>